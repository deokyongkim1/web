<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{YYYY-MM-DD HH:mm:ss} %level %logger - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.jacob" level="debug" additivity="false">
    <appender-ref ref="STDOUT"/>
  </logger>

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>